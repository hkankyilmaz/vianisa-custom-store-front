{
  "compilerOptions": {
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"]
    }
  },
  "include": ["./**/*.js", "./**/*.jsx"],
  "exclude": [
    ".git",
    ".cache",
    "dist",
    "dist*",
    "node_modules",
    "**/dist/*",
    "**/node_modules/*"
  ]
}
